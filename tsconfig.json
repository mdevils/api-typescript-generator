{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2020", "esnext", "DOM", "DOM.Iterable"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "declaration": true,
    "outDir": "lib",
    "removeComments": true
  },
  "include": ["src", "test"]
}
